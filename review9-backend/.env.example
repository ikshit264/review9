# Database
DATABASE_URL="postgresql://username:password@localhost:5432/hireai_db?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRATION="30d"

# Application
NODE_ENV="development"
PORT=3001
ALLOWED_ORIGINS="http://localhost:3000"

# AWS S3 Configuration (for resume uploads)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_S3_BUCKET_NAME="your-s3-bucket-name"

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-specific-password"
SMTP_FROM="HireAI <noreply@hireai.com>"

# Gemini AI Configuration
NEST_GEMINI_API_KEY="your-gemini-api-key-here"

# Stripe Configuration (for billing)
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"
STRIPE_PRO_PRICE_ID="price_your-pro-plan-price-id"
STRIPE_ULTRA_PRICE_ID="price_your-ultra-plan-price-id"
